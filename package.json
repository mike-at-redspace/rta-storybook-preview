{
  "name": "rta-preview-addon",
  "version": "1.0.0",
  "description": "Storybook addon for testing component behavior across device sizes, orientations, and screen types.",
  "author": "Paramount",
  "license": "MIT",
  "type": "module",
  "main": "./dist/manager.js",
  "module": "./dist/manager.js",
  "types": "./dist/manager.d.ts",
  "exports": {
    ".": {
      "types": "./dist/manager.d.ts",
      "import": "./dist/manager.js",
      "default": "./dist/manager.js"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "import": "./dist/manager.js",
      "default": "./dist/manager.js"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "import": "./dist/preview.js",
      "default": "./dist/preview.js"
    },
    "./preset": "./dist/preset.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "scripts",
    "preset.js"
  ],
  "bin": {
    "rta-preview-addon-noop": "scripts/noop.js"
  },
  "scripts": {
    "build": "tsup",
    "build-storybook": "pnpm build && storybook build",
    "dev": "tsup --watch",
    "storybook": "storybook dev -p 6006",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "node scripts/prepare.js"
  },
  "dependencies": {
    "html2canvas": "^1.4.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "storybook": "^10.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "rta-preview-addon": "file:.",
    "@biomejs/biome": "^2.3.13",
    "@storybook/react": "^10.0.0",
    "@storybook/react-vite": "^10.0.0",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "4.0.18",
    "husky": "^9.1.7",
    "jsdom": "^24.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.5.1",
    "storybook": "^10.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0"
    }
  },
  "keywords": [
    "storybook",
    "addon",
    "device-preview",
    "responsive-design",
    "viewport",
    "rta",
    "testing",
    "storybook-addon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mike-at-redspace/rta-storybook-preview.git"
  },
  "homepage": "https://github.com/mike-at-redspace/rta-storybook-preview#readme",
  "bugs": {
    "url": "https://github.com/mike-at-redspace/rta-storybook-preview/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bundler": {
    "managerEntries": [
      "src/ui/Manager.tsx"
    ],
    "nodeEntries": [
      "src/preset.ts"
    ],
    "previewEntries": [
      "src/ui/Preview.tsx"
    ]
  },
  "storybook": {
    "displayName": "Ṛta (ऋत) - Storybook Preview",
    "supportedFrameworks": [
      "react"
    ],
    "unsupportedFrameworks": []
  }
}
