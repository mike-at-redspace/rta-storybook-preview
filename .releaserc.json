{
  "branches": ["main", { "name": "develop", "prerelease": "dev" }],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["dist/**/*.{js,d.ts,js.map}", "package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ðŸŽ‰ This issue has been resolved in [v${nextRelease.version}](https://github.com/${options.repositoryUrl}/releases/tag/v${nextRelease.version})",
        "failTitle": "The automated release failed"
      }
    ]
  ]
}
